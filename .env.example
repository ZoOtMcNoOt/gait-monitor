# Gait Monitor - Environment Configuration
# Copy this file to .env for development or .env.production for production

# =================================
# APPLICATION SETTINGS
# =================================

# Application mode (development | production)
VITE_APP_MODE=development

# Enable debug logging (true | false)
VITE_DEBUG_ENABLED=true

# Enable device debugging features (true | false)
VITE_DEBUG_DEVICES=true

# Enable chart debugging (true | false)
VITE_DEBUG_CHARTS=false

# =================================
# DATA COLLECTION SETTINGS
# =================================

# Maximum data points to display in live charts
VITE_MAX_CHART_POINTS=1000

# Data collection update interval (milliseconds)
VITE_DATA_UPDATE_INTERVAL=100

# Device heartbeat timeout (milliseconds)
VITE_HEARTBEAT_TIMEOUT=10000

# Device connection timeout (milliseconds)
VITE_CONNECTION_TIMEOUT=30000

# =================================
# USER INTERFACE SETTINGS
# =================================

# Default theme (light | dark | auto)
VITE_DEFAULT_THEME=auto

# Enable animations (true | false)
VITE_ANIMATIONS_ENABLED=true

# Chart smoothing factor (0.0 - 1.0)
VITE_CHART_SMOOTHING=0.3

# Toast notification duration (milliseconds)
VITE_TOAST_DURATION=5000

# =================================
# STORAGE SETTINGS
# =================================

# Default data retention period (days)
VITE_DATA_RETENTION_DAYS=30

# Enable auto-save (true | false)
VITE_AUTO_SAVE_ENABLED=true

# Auto-save interval (seconds)
VITE_AUTO_SAVE_INTERVAL=300

# Maximum file size for exports (MB)
VITE_MAX_EXPORT_SIZE=100

# =================================
# PERFORMANCE SETTINGS
# =================================

# Enable performance monitoring (true | false)
VITE_PERFORMANCE_MONITORING=true

# Maximum concurrent device connections
VITE_MAX_CONCURRENT_DEVICES=4

# Chart render throttle (milliseconds)
VITE_CHART_RENDER_THROTTLE=16

# =================================
# DEVELOPMENT SETTINGS
# =================================

# Enable mock data for testing (true | false)
VITE_ENABLE_MOCK_DATA=false

# Mock device count
VITE_MOCK_DEVICE_COUNT=2

# Enable React DevTools (true | false)
VITE_REACT_DEVTOOLS=true

# Enable hot reload (true | false)
VITE_HOT_RELOAD=true
